<%#

# Parameters
- name: string
- short: string
- hintId: string
- icon?: string
- noText?: boolean

# Components
## After
components/hintButtonsSetup

_%>
<%_ 
  var noText = noText === undefined ? false : noText
  var icon = icon === undefined ? "_Anking_v3.png" : icon
  
  const containerId = `hint-${short}`
  const btnId = `button-${short}`
_%> 
{{#<%- name %>}}
<span id = "<%- containerId %>" class="hintBtn" data-name="<%-name%>">
  <a class="hint" onclick="toggleHintBtn('<%- containerId %>')"></a>
  <button id="<%- btnId %>" class="button-general" onclick="toggleHintBtn('<%- containerId %>')">
    <img src="<%- icon %>"> <% if (!noText) { %><%- name %><% } %>
  </button>
  <div id="<%- hintId %>" class="hints" style="display: none;">{{edit:<%- name %>}}</div>
</span>
{{/<%- name %>}}